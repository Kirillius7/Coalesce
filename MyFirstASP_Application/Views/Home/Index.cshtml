html, body { height: 100%; margin: 0; font-family: Arial, sans-serif; }

/* Wrapper центрує контейнер карток по вертикалі і має внутрішні відступи */
.cards-wrapper {
  min-height: 90vh;               /* займає всю висоту вікна */
  display: flex;
  justify-content: center;         /* центрування по горизонталі */
  align-items: center;             /* центрування по вертикалі */
  padding: 2rem;                   /* відступ від країв вікна */
  /* background: #f5f7fb;             /* фон сторінки (необов'язково) */ */
}

/* Контейнер карток — тут Flexbox керує рядком карток */
.cards-container {
  display: flex;
  gap: 6rem;                       /* простір між картками — змінюй тут */
  justify-content: center;
  align-items: flex-start;         /* вирівнювання карток зверху (щоб кнопки були на різній висоті, якщо тексти різні) */
  flex-wrap: wrap;                 /* дозволяє переносити картки на новий ряд на вузьких екранах */
}

/* Одна картка */
.card {
  width: 260px;                    /* ширина картки (зроби більше/менше) */
  height: 420px;                   /* висота — більше ніж ширина, як ти хотів */
  background: #ffffff;
  border-radius: 12px;
  box-shadow: 0 8px 24px rgba(0,0,0,0.08);
  overflow: hidden;                /* щоб картинка не виходила за межі */
  display: flex;
  flex-direction: column;          /* вміст іде зверху вниз */
}

/* Верхня частина — фото */
.card-image {
  height: 50%;                     /* фото займає половину висоти картки */
  width: 100%;
  overflow: hidden;
}
.card-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;               /* важливо: фото заповнить область без спотворення */
  display: block;
}

/* Контент під фото: заголовок, текст, кнопка */
.card-content {
  padding: 1rem;
  display: flex;
  flex-direction: column;
  gap: 0.6rem;
  flex: 1;                         /* щоб контент займав залишок висоти */
}
.card-content h3 { margin: 0; font-size: 1.05rem; }
.card-content p { margin: 0; color: #555; font-size: 0.95rem; flex: 1; }

/* Кнопка */
.card-content button {
  align-self: center;          /* кнопка по лівому краю вмісту */
  padding: 0.45rem 0.9rem;
  /* border: none; */
  border-radius: 8px;
  /* background: #007bff;  */
  /* color: #fff; */
  /* cursor: pointer; */
}
.card-content h3 {
  margin: 0;
  font-size: 1.05rem;
  text-align: center; /* центрує текст заголовка */
}
.card-content button:hover { opacity: 0.92; }
}

}
</style>

