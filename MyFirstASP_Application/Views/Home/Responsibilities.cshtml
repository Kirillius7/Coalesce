@{
}
@model List<Responsibility>

@{
    var group = Model.OrderBy(
                m => m.date)
                .GroupBy(
                    x => new { x.date.Year, x.date.Month, x.date.Day }
                ).ToList();

    var monthNames = new Dictionary<int, string> {
            { 1, "January" }, { 2, "February" }, { 3, "March" },
            { 4, "April" }, { 5, "May" }, { 6, "June" },
            { 7, "July" }, { 8, "August" }, { 9, "September" },
            { 10, "October" }, { 11, "November" }, { 12, "December" }
        };


}
<div class="text-center">
    <h1 class="display-4">List to do</h1>
    <br />
    <a class="btn my-gradient-btn" asp-controller="Home" asp-action="Index">Back</a>
    <a class="btn my-gradient-btn" asp-controller="Home" asp-action="CreateEditResponsibility">Create new</a>
    <hr />
    <h3>Total tasks @ViewBag.responsibilities</h3>
    <br />
    <br1/>

    @foreach (var grp in group)
    {
           <h3>@monthNames[grp.Key.Month] </h3>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Day</th>
                            <th>Number of tasks</th>
                            <th>Number of accomplished</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                @foreach (var expense in Model.DistinctBy(x => x.date))
                {
                                    <tr>
                                        <td>@expense.date.Day</td>
                                        <td>@expense.task.Count()</td>
                                        <td>@grp.Where(x => x.accoplishment == true).Count()</td>
                                        <td>
                                            <a asp-action="MonthResponsibilities" class="btn btn-outline-success" asp-route-id="@expense.id">Go to</a>
                                            <a asp-action="DeleteExpense" class="btn btn-outline-danger" asp-route-id="@expense.id">Delete</a>
                                        </td>
                                    </tr>
                }
                    </tbody>
                </table>
    }
</div>