@{
    ViewData["Title"] = "Create / Edit";
}

@model MyFirstASP_Application.Models.Date
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="text-center">
    <h1 class="display-4">Create or edit a date</h1>
</div>
<div class="d-flex justify-content-center">
    <form asp-action="CreateEditDateForm" style="max-width: 600px; width: 100%;"> 
        <input hidden class = "form-control" type = "number" placeholder = "0" asp-for="id" />

        <label class = "mt-4">Name</label>
        <input class = "form-control" type = "name" placeholder = "Add a name" asp-for="name" />
        <span asp-validation-for="name" class="text-danger"></span>
        <br />

        <label class = "mt-4">Type</label>
        <input class = "form-control" type = "text" placeholder = "Add a type" asp-for="type"/>
        <span asp-validation-for="type" class="text-danger"></span>
        <br />

        <label class = "mt-4">Date</label>
        <input type="date" asp-for="dt" class="form-control" />
        <span asp-validation-for="dt" class="text-danger"></span>
        <br />

        <a class="btn btn-primary mt-4" asp-controller="Date" asp-action="Dates">Back</a>

        <div class="text-center mt-4">
            <button class="btn btn-success" type="submit">Ok</button>
            <button class="btn btn-danger" type="reset">Clear</button>
        </div>
    </form>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</div>